%h4
  Featured Products
  %small.pull-right 200+ featured products
.row-fluid
  #featured.carousel.slide
    .carousel-inner
      .item.active
        %ul.thumbnails  
          - (1..4).each do |item|
            %li.span3
              .thumbnail
                %i.tag
                =link_to 'product_detail' do 
                  =image_tag "products/b#{item}.jpg"
                .caption
                  %h5 Product name
                  %h4
                    %a.btn{:href => "product_details.html"} VIEW
                    %span.pull-right $222.00
      -(1..11).each_slice(4) do |group|
        .item
          %ul.thumbnails
            -group.each do |item|
              %li.span3
                .thumbnail
                  %i.tag
                  =link_to 'product_detail' do 
                    =image_tag "products/#{item}.jpg"
                  .caption
                    %h5 Product name
                    %h4
                      %a.btn{:href => "product_details.html"} VIEW
                      %span.pull-right $222.00
          
