!!! 
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title Bootshop online Shopping cart
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/

    = stylesheet_link_tag 'bootstrap.min.css', class: 'callCss'
    = stylesheet_link_tag    'application', 'base', 'bootstrap-responsive.min', 'font-awesome', 'prettify',  media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'jquery', 'bootstrap.min', 'google-code-prettify/prettify',  'bootshop', 'jquery.lightbox-0.5', 'data-turbolinks-track' => true



    / fav and touch icons
    = link_to '', 'ico/favicon.ico', rel: 'shortcut icon'
    = link_to '', 'ico/apple-touch-icon-144-precomposed.png', rel: 'apple-touch-icon-precomposed', size: '144x144'
    = link_to '', 'ico/apple-touch-icon-114-precomposed.png', rel: 'apple-touch-icon-precomposed', size: '114x114'
    = link_to '', 'ico/apple-touch-icon-72-precomposed.png', rel: 'apple-touch-icon-precomposed', size: '72x72'
    = link_to '', 'ico/apple-touch-icon-57-precomposed.png', rel: 'apple-touch-icon-precomposed'

    %style#enject{:type => "text/css"}
  %body
    = render 'shared/header'
    = render 'shared/carousel'
    #mainBody
      .container
        .row
          = render 'shared/sidebar'
          = yield
    = render 'shared/footer'